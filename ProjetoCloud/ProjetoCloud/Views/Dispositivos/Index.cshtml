@model IEnumerable<ProjetoCloud.Models.Dispositivo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome_Dispositivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_Cadastro_Dispositivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status_Dispositivo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
