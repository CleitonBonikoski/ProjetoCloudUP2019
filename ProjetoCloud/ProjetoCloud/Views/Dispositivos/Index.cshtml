                @Html.DisplayFor(modelItem => item.Nome_Dispositivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Cadastro_Dispositivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status_Dispositivo)
            </td>
            <td>
