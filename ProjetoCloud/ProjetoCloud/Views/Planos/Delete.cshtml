@model DAL.Entidades.Plano

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Apagar Plano</h2>

<h3>Tem certeza que deseja apagar o plano?</h3>
<div>
    <div>
        <hr />
        <dl>
            <dt>
                @Html.DisplayName("Nome Plano")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome_Plano)
            </dd>
            <br />
            <dt>
                @Html.DisplayName("Valor R$")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Valor_Plano)
            </dd>
            <br />
            <dt>
                @Html.DisplayName("Data Cadastro Plano")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Data_Cadastro_Plano)
            </dd>
            <br />
            <dt>
                @Html.DisplayName("Quantidade Máxima Dispositivos")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Qtde_Max_Dispositivos_Plano)
            </dd>
        </dl>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_Plano" />
        <a asp-action="Index" class="btn btn-success">Voltar</a> |
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>
