@model IEnumerable<ProjetoCloud.Models.Plano>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome_Plano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor_Plano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_Cadastro_Plano)
