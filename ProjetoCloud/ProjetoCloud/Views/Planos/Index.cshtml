        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_Plano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor_Plano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Cadastro_Plano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qtde_Max_Dispositivos_Plano)
