@model DAL.Entidades.Plano
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Plano</h2>
<hr />
<div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Plano" />
            <div class="form-group">
                <b>@Html.DisplayName("Nome Plano")</b>
                <input asp-for="Nome_Plano" class="form-control text-center" />
                <span asp-validation-for="Nome_Plano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b> @Html.DisplayName("Valor R$")</b>
                <input asp-for="Valor_Plano" class="form-control text-center" />
                <span asp-validation-for="Valor_Plano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b> @Html.DisplayName("Quantidade Máxima Dispositivos")</b>
                <input asp-for="Qtde_Max_Dispositivos_Plano" class="form-control text-center" />
                <span asp-validation-for="Qtde_Max_Dispositivos_Plano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-success">Voltar</a>
                <input type="submit" value="Atualizar" class="btn btn-info" />
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
