@model DAL.Entidades.Ambiente

@{
    ViewData["Title"] = "Cadastrar Ambiente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar Ambiente</h2>

<hr />
<div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b>@Html.DisplayName("Nome Ambiente")</b>
                <input asp-for="Nome_Ambiente" class="form-control text-center" />
                <span asp-validation-for="Nome_Ambiente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-success">Voltar</a>
                <input type="submit" value="Cadastrar" class="btn btn-info" />
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
